{
  "productName": "Santra QR",
  "version": "0.1.0",
  "identifier": "com.santra.qrapp",
  "build": {
    "beforeDevCommand": "npm run web",
    "beforeBuildCommand": "npm run web-build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 1000,
        "resizable": true,
        "title": "Santra QR - Sistem Antrian Otomatis",
        "width": 1600,
        "minHeight": 800,
        "minWidth": 1200,
        "center": true,
        "maximized": true,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": ["icons/icon-256x256.png", "icons/icon-128x128.png", "icons/icon-64x64.png", "icons/icon-32x32.png", "icons/icon.ico"]
  }
}
